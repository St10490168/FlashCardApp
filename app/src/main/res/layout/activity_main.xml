<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#E40A6189"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="32dp"
            android:paddingStart="32dp"
            android:paddingLeft="32dp"
            android:paddingTop="40dp"
            android:paddingEnd="32dp"
            android:paddingBottom="20dp"
            android:text="This is an app that will test your  history knowledge.Please press start to continue"
            android:textAlignment="center"
            android:textColor="#F8F4F4"
            android:textSize="30sp"
            tools:text="This is an app that will test your  history knowledge.Please press start to continue" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="341dp"
            android:layout_height="72dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="60dp"
            android:height="30dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:maxWidth="320dp"
            android:text="Start" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>